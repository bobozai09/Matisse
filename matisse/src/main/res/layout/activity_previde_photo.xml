<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <ImageView            android:id="@+id/image_show"            android:layout_width="match_parent"            android:layout_height="match_parent" />        <FrameLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_margin="8dp"            android:fitsSystemWindows="true">            <TextView                android:clickable="true"                android:id="@+id/text_once_again"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="start"                android:drawableLeft="@drawable/back"                android:padding="16dp"                android:text="重拍"                android:textSize="16sp" />            <TextView                android:clickable="true"                android:id="@+id/text_use_photo"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="end"                android:padding="16dp"                android:text="使用"                android:textSize="16sp" />        </FrameLayout>    </RelativeLayout></RelativeLayout>